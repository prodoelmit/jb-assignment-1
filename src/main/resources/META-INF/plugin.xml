<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.prodoelmit.jbassignment1</id>
    <name>ProdoElmit's compression</name>
    <vendor>prodoelmit</vendor>

    <depends>com.intellij.modules.platform</depends>

    <resource-bundle>messages.CompressorBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <notificationGroup id="notifications.compressor"
                           displayType="BALLOON"
                           key="notifications.compressor"/>
    </extensions>

    <actions resource-bundle="messages.CompressorBundle">
        <action id="CompressCurrentFile"
                class="com.github.prodoelmit.jbassignment1.CompressAction"
        >
            <add-to-group group-id="FileExportGroup"
                          relative-to-action="ExportToHTML"
                          anchor="after"
                          />
        </action>



    </actions>
</idea-plugin>
